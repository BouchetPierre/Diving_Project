{% extends 'base.html.twig' %}

{% block title %}Mon planning{% endblock %}

{% block body %}
 <div class="bandeau">
     <div class="container">
         <div class="row">
            <div class="col-auto mr-auto align-middle">
                <h4 class="mt-3 ">Bonjour {{app.user.pseudo}}</h4>
            </div>
            <div class="col-auto">
                <nav class="navbar navbar-expand-lg navbar-light ">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse align-middle" id="navbarSupportedContent">
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item active">
                                <a class="nav-link text-white " href="javascript:history.go(-1)">Retour</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white " href={{ path('diving_listeDiving') }}>Liste des plongées</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white " href={{ path('message') }}>J'ai une question !</a>
                            </li>
                            {% if is_granted('ROLE_ADMIN') %}
                                <li class="nav-item">
                                    <a class="nav-link text-warning" href={{ path('admin_index') }}>Menu ADMINISTRATEUR</a>
                                </li>
                            {% endif %}
                            <li class="nav-item dropdown">
                                <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" id="adminDropdown">
                                    <i class="fas fa-edit fa-2x"></i>Connexion</a>

                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="adminDropdown">
                                    <a href="{{ path('update_password') }}" class="dropdown-item" >Modifier mon mot de passe</a>
                                    <div class="dropdown-divider"></div>
                                    <a href="{{ path('account_logout') }}" class="dropdown-item">Déconnexion</a>
                                </div>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
            <div class="col-auto mb-2">
                <img class="logo" src="/pictures/logodiving.gif">
            </div>
        </div>
    </div>
</div>

<div class="bg-white text-secondary pt-2">
        <div class="container mt-3 mb-3">
            <h2 >Mon planning</h2>
        </div>
        <div>
            <img  class="img-fluid" src="/pictures/fond.jpg" alt="">
        </div>
        <div class="container text-secondary dives">
        {% for reservation in reservations %}
                <div class=" planning container bg-white dive text-secondary border border-secondary mb-3 mt-3 pr-5">
                    <div class=" row font-weight-bold justify-content-between" style="font-size:1.2em;">
                        <div class="col-4  mt-3 ">
                            <p>Le: {{ reservation.date|date('d/m/Y') }}</p>
                            <p>A:  {{ reservation.location }}</p>
                        </div>
                        <div class="col_lg-8 mt-2  mb-2">
                            <a class="btn btn-info btn active " href={{ path('reservation_div_members', {'id': reservation.idD}) }}>Liste des participants</a>
                            <a class="btn btn-danger " onclick="return confirm(`Etes vous sur de vouloir supprimer cette reservation ?`) "href="{{path('reservation_delete', {'id': reservation.id}) }}"><img style="width:25px; height:25px;" src="/pictures/bin.png"></a>
                        </div>
                    </div>
                </div>
        {% endfor %}
        </div>
</div>
{% endblock %}
