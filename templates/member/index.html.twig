{% extends 'base.html.twig' %}

{% block title %}Liste des membres du Club de la Mer{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-auto mr-auto align-middle">

                <h4 class="mt-3 ">Bonjour {{app.user.pseudo}}</h4>
            </div>
            <div class="col-auto">
                <nav class="navbar navbar-expand-lg navbar-light ">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse align-middle" id="navbarSupportedContent">
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item active">
                                <a class="nav-link text-white " href="javascript:history.go(-1)">Retour</a>
                            </li>
                            <li class="nav-item active">
                                <a class="nav-link text-white" href={{ path("members_create") }}>Créer un nouvel adhérent</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-warning" href={{ path('admin_index') }}>Menu ADMINISTRATEUR</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-warning " href={{ path('account_logout') }}>Déconnexion</a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
            <div class="col-auto mb-2">
                <img style="width:75px; height:75px;" src="/pictures/logodiving.gif">
            </div>
        </div>
    </div>
    <div class="container mt-2 mb-5">
        <h2>Lite des adhérants</h2>
    </div>
    <div class="container mb-3">
        <p> Nous sommes actuellement {{ total }} adhérents au Club de la Mer</p>
    </div>

    <div class="container " >
        <table class="table table-striped">
            <thead class="">
                <tr>
                    <th scope="col">Prénom</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Niveau</th>
                    <th scope="col">Encadrant</th>
                    <th scope="col">Téléphone</th>
                    <th scope="col">Tél. Urgence</th>
                    <th scope="col">Email</th>
                    <th scope="col">Modifier</th>
                    <th scope="col">Supprimer</th>
                </tr>
            </thead>

            {% for member in members|sort %}
                <tbody>
                    <tr scope="row">
                        <td>{{ member.name }}</td>
                        <td>{{ member.firstName }}</td>
                        <td>{{ member.levelDive }}</td>
                        <td>{{ member.instructor }}</td>
                        <td>{{ member.phone1 }}</td>
                        <td>{{ member.phone2 }}</td>
                        <td>{{ member.mail}}</td>
                        <td><a class="btn btn-warning btn  mt-2" href="{{path('member_edit', {'pseudo': member.pseudo}) }}">Modifier</a></td>
                        <td><a class="btn btn-danger btn  mt-2" onclick="return confirm(`Etes vous sur de vouloir supprimer cet adhérant : {{ member.pseudo }} ?`)" href="{{path('member_delete', {'pseudo': member.pseudo}) }}">Supprimer</a></td>
                    </tr>
                </tbody>
            {% endfor %}
        </table>
        <div class="d-flex justify-content-center">
            <ul class="pagination">
                <li class="page-item {% if page ==1 %}disabled{% endif %}">
                    <a class="page-link" href="{{ path('members_index', {'page':page -1}) }}">&laquo;</a>
                </li>
                {% for i in 1..pages %}
                    <li class="page-item {% if page == i%} active {% endif %}">
                        <a class="page-link" href="{{ path('members_index', {'page':i}) }}">{{ i }}</a>
                    </li>
                {% endfor %}
                <li class="page-item {% if page == pages %}disabled{% endif %}">
                    <a class="page-link" href="{{ path('members_index', {'page': page +1}) }}">&raquo;</a>
                </li>
            </ul>
        </div>
    </div>
{% endblock %}
