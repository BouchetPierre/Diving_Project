<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/divingHome.css">

    <link rel="icon" type="image/png" sizes="16x16" href="/pictures/favicon-16x16.png">

    <link href="https://fonts.googleapis.com/css?family=Chewy&display=swap" rel="stylesheet">
    <title>{% block title %}Connexion Club de la Mer{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
</head>
<body class="">
<!--<style>body{cursor:url("{{ asset("/pictures/cursor.cur") }}"), default;} a{cursor:url("{{ asset("/pictures/cursor2.cur") }}"), default;}</style>-->
{% for label, messages in app.flashes %}
    <div class="container">
        <div class="alert alert-{{ label }}">
            {% for message in messages %}
                <p>{{ message }}</p>
            {% endfor %}
        </div>
    </div>
{% endfor %}
{% block body %}

    {% if hasError %}
        <div class="alert alert-danger"> Une erreur est survenue, le nom d'utilisateur ou alors le mot de passe est invalide</div>
    {% endif %}
<div class="bandeau">
        <div class="container-fluid vh-100">
                <div class="container">
                    <div class="raw">
                        <div class="col">&nbsp;</div>
                        <div class="col-md-8 col-sm-10 ">
                            <div class="bg light">
                                <div class="row justify-content-between mt-5 mb-5">
                                    <div>
                                        <h2>Connectez vous !</h2>
                                    </div>
                                    <div>
                                        <img class="logo" src="/pictures/logodiving.gif">
                                   </div>
                                </div>
                            </div>
                                <form class="dive" action="{{ path('account_login') }}" method="post">
                                    <div class="form-group">
                                        <label for="pseudo" >Votre Pseudo</label>
                                        <input type="text" name="_username" id="speudo" class="form-control" placeholder="Pseudo..." required value="{{ username }}">
                                    </div>
                                    <div class="form-group">
                                        <label for="password" >Mot de passe</label>
                                        <input type="password" name="_password" id="password" placeholder="Mot de passe..." class="form-control" required>
                                    </div>
                                    <div class="form-group">
                                        <input type="checkbox" id="remember_me" name="_remember_me" checked/>
                                        <label for="remember_me">Rester connecté</label>

                                    </div>
                                    <input type="hidden" name="token" />
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-dark connect">Je plonge !!!</button>
                                    </div>
                                    <div class="">
                                        <a  class="text-warning" href="{{ path('request_resetting') }}">Mot de passe oublié !!!</a>
                                    </div>
                                </form>
                            </div>
                        <div>
                    </div>
                </div>
        </div>
  </div>
{% endblock %}
    {% block footer %}
        <div class=" bandeau fixed-bottom pt-2 pb-2" style="height: 50px;">
            <div class="col align-self-end  align-items-end row justify-content-md-center">
                <div class="row align-items-center">
                    <div class="col-auto copy">
                        <p>Copyright  -   2019    -    Pierre BOUCHET</p>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}
    {% block javascripts %}{% endblock %}
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>
</html>