{% extends 'base.html.twig' %}

{% block title %}Connection au Club de la Mer{% endblock %}

{% block body %}

    {% if hasError %}
        <div class="alert alert-danger"> Une erreur est survenue, le nom d'utilisateur ou alors le mot de passe est invalide</div>
    {% endif %}
<div class="bandeau">
        <div class="container-fluid vh-100">
                <div class="container">
                    <div class="raw">
                        <div class="col-md-3">&nbsp;</div>
                        <div class="col-md-6">
                            <div class="bg light py-3 px-3">
                                <div class="row justify-content-between">
                                    <div>
                                        <h2>Connectez vous !</h2>
                                    </div>
                                    <div>
                                        <img style="width:75px; height:75px;" src="/pictures/logodiving.gif">
                                   </div>
                                </div>
                            </div>
                                <form class="dive" action="{{ path('account_login') }}" method="post">
                                    <div class="form-group">
                                        <label for="pseudo" >Votre Pseudo</label>
                                        <input type="text" name="_username" id="speudo" class="form-control" placeholder="Pseudo..." required value="{{ username }}">
                                    </div>
                                    <div class="form-group">
                                        <label for="password" >Mot de passe</label>
                                        <input type="password" name="_password" id="password" placeholder="Mot de passe..." class="form-control" required>
                                    </div>
                                    <input type="hidden" name="token" />
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-dark">Je plonge !!!</button>
                                    </div>
                                    <div class="">
                                        <a  class="text-warning" href="{{ path('request_resetting') }}">Mot de passe oubli√© !!!</a>
                                    </div>
                                </form>
                            </div>
                        <div>
                    </div>
                </div>
        </div>
  </div>
{% endblock %}
