{% extends 'base.html.twig' %}
{% block body %}
    <div style="height:150px;">
        <div class="row justify-content-between">
            <div class="col-2">
                <img style="width:75px; height:75px;" src="./pictures/divinglogo.jpg">
            </div>
            <div class="text-center">
                <h2>Club de la Mer</h2>
                <h2>Palavas</h2>
            </div>
            <div class="text-right" >
                <img style="width:75px; height:75px;" src="./pictures/ffessm.jpg">
            </div>
        </div>
        <div style="margin-top: -100px;">
            <h3 class="text-center">Feuille de palanquee</h3>
        </div>
    </div>
    <div >
       <div class=" mt-5">
           <h6>Liste des participants de la plongee n°: {{ numDive.0 }}</h6>
       </div>
       <div>
           <div >
             <table class="table table-striped" style="font-size: 0.7em; width: 300px;">
                <thead class="">
                    <tr>
                        <th scope="col">Prénom</th>
                        <th scope="col">Nom</th>
                        <th scope="col">Niveau</th>
                    </tr>
                </thead>
                 {% for reservation in reservation %}
                <tbody>
                    <tr scope="row" >
                        <td>{{ reservation.name }}</td>
                        <td>{{ reservation.firstName }}</td>
                        <td>{{ reservation.levelDive }}</td>
                    </tr>
                </tbody>
                {% endfor %}
             </table>
           </div>
           <div>
               <p>{{ infoDive.2|date('d/m/Y') }}</p>
           </div>
       </div>
    </div>
    <div>
        <div style="border: solid; border-color:#222222; width: 300px; height: 300px">
            <p> Détails de la plongée:</p>
        </div>
        <div>

        </div>
    </div>

{% endblock %}
