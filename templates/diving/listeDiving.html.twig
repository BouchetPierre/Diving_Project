{% extends 'base.html.twig' %}

{% block title %}Liste des plongées du Club de la Mer{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-auto mr-auto align-middle">

                <h4 class="mt-3 ">Bonjour {{app.user.pseudo}}</h4>
            </div>
            <div class="col-auto">
                <nav class="navbar navbar-expand-lg navbar-light ">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse align-middle" id="navbarSupportedContent">
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item active">
                                <a class="nav-link text-white " href="javascript:history.go(-1)">Retour</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white " href={{ path('member_reservation', {'id': app.user.id}) }}>Mon planning</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white " href="">J'ai une question !</a>
                            </li>
                            {% if is_granted('ROLE_ADMIN') %}
                                <li class="nav-item">
                                    <a class="nav-link text-warning" href={{ path('admin_index') }}>Menu ADMINISTRATEUR</a>
                                </li>
                            {% endif %}
                        </ul>
                    </div>
                </nav>
            </div>
            <div class="col-auto mb-2">
                <img style="width:75px; height:75px;" src="/pictures/divinglogo.jpg">
            </div>
        </div>
    </div>
    <div class="container">
        <h2>Lites des plongées</h2>
    </div>
    <div class="container " >
        {% for diving in diving %}
            <div class="container border mb-5 mt-5">
                <div class="row justify-content-between">
                    <div class="col-auto mb-3 mt-2">
                      Date:   {{ diving.date|date('d/m/Y') }}
                    </div>
                    <div class="col-auto  mb-3 mt-2">
                      Lieu:   {{ diving.location }}
                    </div>
                </div>
                <div class="row justify-content-between">
                    <div class="col-auto mb-2">
                        Niveau minimum:   {{ diving.levelMin }}
                    </div>
                    <div class="col-auto mb-2">
                        {% if diving.levelMin <= app.user.levelDive %}
                        <img style="width:20px; height:20px;" src="/pictures/vert.png">
                        {% else %}
                        <img style="width:20px; height:20px;" src="/pictures/rouge.png">
                         {% endif %}
                    </div>
                </div>
                <div class="mt-3">
                    {{ diving.description }}
                </div>
                <div class="row justify-content-between">
                    <div class="col-auto mb-5 mt-5">
                       Nombre de places:   {{ diving.places }}
                    </div>
                    <div class="col-auto mb-5 mt-5">
                        <a class="btn btn-primary btn active" href={{ path('reservation_div_members', {'id': diving.id}) }}>Liste des participants</a>
                        {% if diving.levelMin <= app.user.levelDive %}
                        <a class="btn btn-primary btn active" href={{ path('listediving_show', {'id': diving.id}) }}> Je plonge !!!</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
