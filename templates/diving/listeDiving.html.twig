{% extends 'base.html.twig' %}

{% block title %}Liste des plong√©es du Club de la Mer{% endblock %}

{% block body %}
    <div class="container">
        <p>Bonjour {{ app.user.name }}</p>
        <img style="width:75px; height:75px;" src="/pictures/divinglogo.jpg">
        <button type="button" class="btn btn-success" ><a href="javascript:history.go(-1)">Retour</a></button>
        <button type="button" class="btn btn-success" ><a href={{ path('member_reservation', {'id': app.user.id}) }}>Mon planning</a></button>
        <button type="button" class="btn btn-success" ><a href="">J'ai une question !</a></button>
    </div>
    <div class="container bg-white" >
        <table class="table table-bordered table-striped">
            <thead>
            <tr>
                <td>Lieu</td>
                <td>Description</td>
                <td>Niveau Minimum</td>
                <td>Nombre de places </td>
                <td>Liste des participants</td>
                <td>Valisation</td>


            </tr>
            </thead>

            {% for diving in diving %}
                <tbody>
                <tr>
                    <td>{{ diving.location }}</td>
                    <td>{{ diving.description }}</td>
                    <td>{{ diving.levelMin }}</td>
                    <td>{{ diving.places }}</td>
                    <td><a href={{ path('reservation_div_members', {'id': diving.id}) }}>Liste des participants</a></td>
                    <td><a href={{ path('listediving_show', {'id': diving.id}) }}> Je plonge !!!</a></td>
                </tr>
                </tbody>
            {% endfor %}
        </table>
    </div>



{% endblock %}
